{% extends 'base.html.twig' %}

{% block meta_description %}Explorez notre blog pour en apprendre davantage sur notre entreprise spécialisée en pose de menuiseries, volets, portails, portes, fenêtres et bien plus. Bénéficiez notre expertise et nos conseils pour personnaliser votre espace selon vos besoins et votre style.
{% endblock %}


{% block meta_og_title %}Actualités | Créabat Menuiseries
{% endblock %}

{% block meta_og_description %}Explorez notre blog pour en apprendre davantage sur notre entreprise spécialisée en pose de menuiseries, volets, portails, portes, fenêtres et bien plus. Bénéficiez notre expertise et nos conseils pour personnaliser votre espace selon vos besoins et votre style.
{% endblock %}
{# Voir pour meta_ogo_image #}
{% block meta_og_image %}
	{{ asset('uploads/actus/' ~ actus.data[0].getMediaPicture()) }}
{% endblock %}


{% block title %}
	Actualités | Créabat Menuiseries
{% endblock %}

{% block body %}
	<div class="bg-white py-6 md:py-24">
		<div class="mx-auto max-w-7xl px-6 lg:px-8  2xl:w-4/5">
			<div class="mx-auto w-full lg:max-w-4xl 2xl:w-full 3xl:max-w-7xl justify-between">
				<h1 class="text-3xl font-bold tracking-tight text-gray-900 uppercase">Actualités</h1>
				<p class="mt-2 text-lg leading-6 md:leading-8 text-gray-600 md:block">Restez informé et inspiré, les dernières nouveautés à votre seuil.</p>
				<div
					class="mt-16 space-y-20 lg:mt-20 lg:space-y-20">					
					{% for actu in actus.data %}
						<article class="relative isolate flex flex-col md:gap-8 lg:flex-row 3xl:flex 3xl:justify-between 3xl:gap-14">
							<div class="relative aspect-[16/9] sm:aspect-[2/1] lg:aspect-square lg:w-64 lg:shrink-0 3xl:w-5/12">
								<img src="{{ asset('assets/uploads/actus/' ~ actu.getMediaPicture()) }}" alt="{{ actu.getMediaAlt}}" class="absolute inset-0 h-full w-full rounded-2xl bg-gray-50 object-cover">
								<div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
							</div>
							<div>
								<div class="hidden md:flex items-center gap-x-4 text-xs">
									<time datetime="2020-03-16" class="text-gray-500">{{actu.createdAt|date('d-m-Y')}}</time>

								</div>
								<div class="group relative max-w-xl text-left 3xl:max-w-4xl">
									<h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600 3xl:text-xl uppercase">
										<a href="{{ path('actu_single', { 'slug': actu.slug }) }}">
											<span class="absolute inset-0"></span>
											{{actu.title}}
										</a>
									</h3>
									<p class="mt-5 text-sm leading-6 text-gray-600 3xl:text-xl">
										{% autoescape false %}
											{{actu.content|striptags|slice(0, 250) ~ '...'}}
										{% endautoescape %}
									</p>
									<a href="{{ path('actu_single', { 'slug': actu.slug }) }}" class="md:hidden inline-block rounded-md bg-customYellow px-3.5 py-2.5 mt-6 text-sm font-semibold text-black shadow-sm hover:bg-customYellowHover focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 3xl:px-5 3xl:py-4">Lire la suite</a>

								</div>
								<div class="hidden md:mt-6 md:flex md:border-t md:border-gray-900/5 md:pt-6">
									<div class="relative flex items-center gap-x-4">
										<img src="{{asset('assets/img/photos/damien-thumbnail.jpg')}}" alt="" class="h-10 w-10 rounded-full bg-gray-50">
										<div class="text-sm leading-6">
											<p class="font-semibold text-gray-900">

												<span class="absolute inset-0"></span>
												Damien Duquene

											</p>
											<p class="text-gray-600">Dirigeant</p>
										</div>
									</div>
								</div>
							</div>
						</article>
					{% endfor %}
					{% set path = 'actu_all' %}
					{% set pages = actus.pages %}
					{% set currentPage = actus.page %}
					{% include '_partials/_pagination.html.twig' %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
