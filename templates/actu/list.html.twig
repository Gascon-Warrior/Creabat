{% extends 'base.html.twig' %}

{% block title %}Créabat | Actualités
{% endblock %}

{% block body %}
	<div class="bg-white py-24 sm:py-32">
		<div class="mx-auto max-w-7xl px-6 lg:px-8  2xl:w-4/5">
			<div class="mx-auto w-full lg:max-w-4xl 2xl:w-full justify-between">
				<h1 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Actualités</h1>
				<p class="mt-2 text-lg leading-8 text-gray-600">Learn how to grow your business with our expert advice.</p>
				<div class="mt-16 space-y-20 lg:mt-20 lg:space-y-20">

					{% for actu in actus.data %}
						<article class="relative isolate flex flex-col gap-8 lg:flex-row">
							<div class="relative aspect-[16/9] sm:aspect-[2/1] lg:aspect-square lg:w-64 lg:shrink-0">
								<img src="{{ asset('assets/uploads/actus/' ~ actu.getMediaPicture()) }}" alt="{{ actu.getMediaAlt}}" class="absolute inset-0 h-full w-full rounded-2xl bg-gray-50 object-cover">
								<div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
							</div>
							<div>
								<div class="flex items-center gap-x-4 text-xs">
									<time datetime="2020-03-16" class="text-gray-500">{{actu.createdAt|date('d-m-Y')}}</time>

								</div>
								<div class="group relative max-w-xl">
									<h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
										<a href="{{ path('actu_single', { 'slug': actu.slug }) }}">
											<span class="absolute inset-0"></span>
											{{actu.title}}
										</a>
									</h3>
									<p class="mt-5 text-sm leading-6 text-gray-600">{{actu.content[:250] ~ '...'}}</p>
								</div>
								<div class="mt-6 flex border-t border-gray-900/5 pt-6">
									<div class="relative flex items-center gap-x-4">
										<img src="{{asset('assets/img/photos/damien-thumbnail.jpg')}}" alt="" class="h-10 w-10 rounded-full bg-gray-50">
										<div class="text-sm leading-6">
											<p class="font-semibold text-gray-900">
												<a href="#">
													<span class="absolute inset-0"></span>
													Damien Duquene
												</a>
											</p>
											<p class="text-gray-600">Dirigeant</p>
										</div>
									</div>
								</div>
							</div>
						</article>
					{% endfor %}
					{% set path = 'actu_all' %}
					{% set pages = actus.pages %}
					{% set currentPage = actus.page %}
					{% include '_partials/_pagination.html.twig' %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
