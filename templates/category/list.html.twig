{% extends 'base.html.twig' %}

{% block body %}
		<div class="relative">
			<img class="w-full h-[200px] object-cover xl:h-[350px] 3xl:h-[450px] " src="{{ asset('assets/img/photos/01_hero_fenetre.avif')}}" 
				alt="Image de présentation de la catégorie de produit">				
			<div class="absolute left-1/2 bottom-5 -translate-x-1/2 rounded-lg bg-white py-2 px-2 3xl:py-8 3xl:px-8 ">
				<h1 class="text-lg font-black tracking-tight text-gray-900 md:text-3xl sm:text-4xl">{{category.name}}</h1>
			</div>
		</div>
			
	<div class="w-full mx-auto px-4 pb-28 lg:px-8 xl:w-9/12 xl:mt-36">
		<div>
			{% for category in products %}
				{% for  product in category.products %}					
					<div class="justify-between mt-16 md:gap-4 md:align-middle lg:mt-20 xl:gap-12 {% if product.id is even %}flex flex-col  xl:flex-row {% else %} flex flex-col xl:flex-row-reverse{% endif %}">
						<div class=" xl:w-1/2">
							<h2 class="text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600 3xl:text-2xl">{{product.name}}</h2>
							<p class="mb-3 mt-3 text-sm leading-6 text-gray-600 text-left md:mb-0.5 xl:text-base 3xl:text-2xl">{{ product.description }}</p>
						</div>
						{% for media in product.media %}
						
						<img class="w-full h-[250px] object-cover rounded-lg shadow-lg xl:w-1/2 md:h-[400px] 3xl:h-[550px] 3xl:w-[800px] " 
							src="{{ asset('assets/uploads/products/' ~ media.picture()) }}" 
							alt="{{media.alt}}">						
					</div>
					{% endfor %}
				{% endfor %}
			{% endfor %}

		</div>
	</div>
{% endblock %}
