{% extends 'base.html.twig' %}

{% block meta_description %}Explorez notre gamme de produits soigneusement sélectionnés auprès de nos partenaires fournisseurs de confiance. Nous vous proposons des menuiseries, volets, portails, portes, fenêtres et bien d'autres solutions d'excellente qualité, que notre équipe expérimentée se fera un plaisir de poser selon vos préférences et besoins spécifiques.
{% endblock %}


{% block meta_og_title %}
	{{category.name}}
	| Créabat Menuiseries
{% endblock %}

{% block meta_og_description %}Explorez notre gamme de produits soigneusement sélectionnés auprès de nos partenaires fournisseurs de confiance. Nous vous proposons des menuiseries, volets, portails, portes, fenêtres et bien d'autres solutions d'excellente qualité, que notre équipe expérimentée se fera un plaisir de poser selon vos préférences et besoins spécifiques.
{% endblock %}

{# Voir pour meta_ogo_image #}
{% block meta_og_image %}{% endblock %}

{% block title %}
	{{category.name}}
	| Créabat Menuiseries
{% endblock %}

{% block body %}
    
	<div class="relative">
		<img class="w-full h-[180px] object-cover xl:h-[350px] 3xl:h-[450px] " src="{{ asset('assets/uploads/categories/' ~ media) }}" alt="Image de présentation de la catégorie de produit">
		<div class="animate-flip-down absolute w-[60%] left-0 bottom-[-20px] xl:bottom-[-30px] 3xl:bottom-[-70px]  rounded-r-lg bg-customYellow py-2 px-2 3xl:py-8 3xl:px-8 ">
			<h1 class="animate-fade-down animate-duration-[800ms] animate-ease-in-out animate-delay-[500ms] mr-[90px] text-lg text-end font-black tracking-wide  text-gray-900 md:text-3xl sm:text-4xl uppercase">{{category.name}}</h1>
		</div>
	</div>

	<div class="w-full mx-auto px-4 pb-48 md:w-10/12 lg:px-8 xl:w-10/12 xl:mt-36 3xl:mt-56 3xl:w-4/6">
    <div>
        {% for category in products %}
            {% for product in category.products %}
                <div class="mt-16 md:gap-4 md:align-middle lg:mt-20 xl:mt-44 xl:gap-12 flex flex-col {% if product.id is even %} lg:flex-row {% else %} lg:flex-row-reverse{% endif %}">
                    <div class="xl:w-1/2 order-last mt-2 delay-[300ms] duration-[800ms] taos:translate-x-[200px] taos:opacity-0 md:mt-0 lg:order-none" data-taos-offset="200">
                        <h2 class="text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600 3xl:text-2xl uppercase">{{product.name}}</h2>
                        {% autoescape false %}
                            <p class="mt-3 text-sm leading-6 text-gray-600 text-left md:mb-0.5 xl:text-base 3xl:text-xl">{{ product.description}}</p>
                        {% endautoescape %}
                        <a href="{{ path('contact_message') }}" class="inline-block rounded-md bg-customYellow px-3.5 py-2.5 mt-6 text-sm font-semibold text-black shadow-sm hover:bg-customYellowHover focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 3xl:px-5 3xl:py-4">Demander un devis</a>
                    </div>
                    {% for media in product.media %}
                        <div class="relative h-[250px] rounded-lg xl:w-1/2 md:h-[400px] 3xl:h-[550px] 3xl:w-[800px] order-first lg:order-none delay-[300ms] duration-[800ms] taos:translate-y-[-200px] taos:opacity-0" data-taos-offset="500">
                            <img class="w-full absolute z-40 h-[250px] object-cover rounded-lg md:h-[400px] 3xl:h-[550px] 3xl:w-[800px]" src="{{ asset('assets/uploads/products/' ~ media.picture()) }}" alt="{{media.alt}}">
                            <div class="absolute z-10 w-full h-full rounded-lg bg-hachure hidden md:block md:left-[-10px] md:top-[-10px] xl:left-[-25px] xl:top-[-25px] right-[15px]"></div>
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
</div>

{% endblock %}
