					{% for actu in lastActus %}
						<article class="flex flex-col items-start justify-between">
							<div class="relative w-full">
								<img src="{{ asset('assets/uploads/actus/' ~ actu.getMediaPicture()) }}" alt="{{ actu.getMediaAlt }}" class="aspect-[16/9] w-full rounded-2xl bg-gray-100 object-cover sm:aspect-[2/1] lg:aspect-[3/2] ">
								<div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
							</div>
							<div class="max-w-xl">
								<div class="mt-8 flex items-center gap-x-4 text-xs">
									<time datetime="2020-03-16" class="text-gray-500 py-1.5 ">{{actu.createdAt|date('Y-m-d')}}</time>
								</div>
								<div class="group relative text-left">
									<h3 class="mt-3 text-lg font-semibold leading-6 text-gray-100 group-hover:text-gray-200">
										<a href="{{ path('actu_single', { 'slug': actu.slug }) }}">
											<span class="absolute inset-0 3xl:text-xl"></span>
											{{actu.title}}
										</a>
									</h3>
									<p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-100 3xl:text-xl">
										{% autoescape false %}
