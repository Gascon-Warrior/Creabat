{% if pages > 1 %}
	<nav class="flex items-center justify-between border-t border-gray-200 px-4 sm:px-0">
		<div class="-mt-px flex w-0 flex-1">
			{% if currentPage > 1 %}
				<a href="{{path(path, {page: currentPage - 1}) }}" class="inline-flex items-center border-t-2 border-transparent pr-1 pt-4 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700">
					<svg class="mr-3 h-5 w-5 text-gray-400" viewbox="0 0 20 20" fill="currentColor" aria-hidden="true">
						<path fill-rule="evenodd" d="M18 10a.75.75 0 01-.75.75H4.66l2.1 1.95a.75.75 0 11-1.02 1.1l-3.5-3.25a.75.75 0 010-1.1l3.5-3.25a.75.75 0 111.02 1.1l-2.1 1.95h12.59A.75.75 0 0118 10z" clip-rule="evenodd"/>
					</svg>
					PrÃ©cedent
				</a>
			{% endif %}
		</div>
		<div class="hidden md:-mt-px md:flex">
			{% for page in 1..pages %}
				{% if page == currentPage %}
					<a href="{{ path(path, {page: page}) }}" class="inline-flex items-center border-t-2 border-customBlue px-4 pt-4 text-sm font-medium text-customBlue" aria-current="page">{{ page }}</a>
				{% elseif (page > 1 and page < (currentPage - 2)) %}
					{% if currentPage > 4 and loop.index == 2 %}
						<span class="inline-flex items-center border-t-2 border-transparent px-4 pt-4 text-sm font-medium text-gray-500">...</span>
					{% endif %}
				{% elseif (page < pages and page > (currentPage + 2)) %}
					{% if currentPage < (pages - 3) and loop.index == (pages - 1) %}
						<span class="inline-flex items-center border-t-2 border-transparent px-4 pt-4 text-sm font-medium text-gray-500">...</span>
					{% endif %}
				{% else %}
					<a href="{{ path(path, {page: page}) }}" class="inline-flex items-center border-t-2 border-transparent px-4 pt-4 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700">{{ page }}</a>
				{% endif %}
			{% endfor %}
		</div>
		<div class="-mt-px flex w-0 flex-1 justify-end">
			{% if currentPage < pages %}
				<a href="{{path(path, {page: currentPage + 1}) }}" class="inline-flex items-center border-t-2 border-transparent pl-1 pt-4 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700">
					Suivant
					<svg class="ml-3 h-5 w-5 text-gray-400" viewbox="0 0 20 20" fill="currentColor" aria-hidden="true">
						<path fill-rule="evenodd" d="M2 10a.75.75 0 01.75-.75h12.59l-2.1-1.95a.75.75 0 111.02-1.1l3.5 3.25a.75.75 0 010 1.1l-3.5 3.25a.75.75 0 11-1.02-1.1l2.1-1.95H2.75A.75.75 0 012 10z" clip-rule="evenodd"/>
					</svg>
				</a>
			{% endif %}
		</div>
	</nav>
{% endif %}
