<div class="bg-black py-24 sm:py-32">
	<div class="mx-auto w-9/12 px-6 lg:px-8">
		<div class="mx-auto max-w-2xl text-center">
			<h2 class="text-3xl font-bold tracking-tight text-gray-100 sm:text-4xl">Les dernières actualités</h2>
		</div>
		<div class="mx-auto mt-16 grid max-w-2xl auto-rows-fr grid-cols-1 gap-32 sm:mt-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">	
            {% for actu in lastActus %}
                	<article class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl bg-gray-900 px-8 pb-8 pt-80 sm:pt-48 lg:pt-80">
				<img src="{{ asset('assets/uploads/actus/' ~ actu.getMediaPicture()) }}" alt="{{ actu.title }}"  class="absolute inset-0 -z-10 h-full w-full object-cover">
				<div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40"></div>
				<div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>

				<div class="flex flex-wrap items-center gap-y-1 overflow-hidden text-sm leading-6 text-gray-300">
					<time datetime="2020-03-16" class="mr-8">{{actu.createdAt|date('Y-m-d')}}</time>					
				</div>
				<h3 class="mt-3 text-lg font-semibold leading-6 text-gray-100">
					<a href="#">
						<span class="absolute inset-0"></span>
						{{actu.title}}
					</a>
				</h3>
			</article>
            {% endfor %}            
		</div>
	</div>
</div>
