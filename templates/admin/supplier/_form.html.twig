{{ form_start(supplierForm) }}
{{ form_row(supplierForm.company) }}
{{ form_row(supplierForm.media_picture) }}
{{ form_row(supplierForm.media_alt) }}
{{ form_row(supplierForm.media_caption) }}

{% if app.request.attributes.get('_route') == 'admin_supplier_edit' %}
	<h2>Images</h2>
	<div>
		<img src="{{ asset('assets/uploads/suppliers/mini/300x300-' ~ supplier.media.picture)}}" alt="{{ supplier.media.alt }}" width="150">
		{#<a href="{{ path('admin_supplier_delete_image', { id: supplier.media.id }) }}" data-delete data-token="{{ csrf_token('delete' ~ supplier.media.id) }}">Supprimer</a>#}
	</div>
{% endif %}

<button type='submit' class="rounded-md bg-green-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600">{{button_label|default('Ajouter')}}</button>

{{ form_end(supplierForm) }}
