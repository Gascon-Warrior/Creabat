{{ form_start(projectForm) }}
    {{ form_row(projectForm.title) }}
    {{ form_row(projectForm.description) }}
    {#Si on est en edition, on affiche les images#}
    {% if app.request.attributes.get('_route') == 'admin_project_edit' %}
        <h2>Images</h2>
        {% for image in project.media %}
            <div>
                <img src="{{ asset('assets/uploads/projets/mini/300x300-' ~ image.picture)}}" alt="{{ image.alt }}" width="150" >
                <a href="{{ path('admin_product_delete_image', { id: image.id }) }}" data-delete data-token="{{ csrf_token('delete' ~ image.id) }}">Supprimer</a>
            </div>
            
        {% endfor %}
    {% endif %}
    {{ form_row(projectForm.photo) }}

<button type='submit' class="rounded-md bg-green-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600">{{button_label|default('Ajouter')}}</button>

{{ form_end(projectForm) }}
