{% block body %}
	<main class="w-full sm:py-32  md:w-8/12 md:py-32 md:mx-auto lg:w-9/12 xl:w-3/5">
		<div class="flex group justify-end relative text-black font-black cursor-pointer" type="submit" onclick="window.history.go(-1); return false;">
			<div class="pr-[10px] flex items-center absolute z-10 right-0 top-[50%] translate-y-[-50%] ">
				<svg xmlns="http://www.w3.org/2000/svg" height="1em"  class="mr-1  group-hover:delay-[5000ms]" viewBox="0 0 448 512"><!--! Font Awesome Pro 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
					<path d="M7.4 273.4C2.7 268.8 0 262.6 0 256s2.7-12.8 7.4-17.4l176-168c9.6-9.2 24.8-8.8 33.9 .8s8.8 24.8-.8 33.9L83.9 232 424 232c13.3 0 24 10.7 24 24s-10.7 24-24 24L83.9 280 216.6 406.6c9.6 9.2 9.9 24.3 .8 33.9s-24.3 9.9-33.9 .8l-176-168z"/>
				</svg>
				<span class="hidden group-hover:block">Retour à la liste</span>
			</div>
			<div class="h-[50px] w-[45px] absolute z-0 right-0 top-[50%] translate-y-[-50%] border-2 rounded-lg border-customYellow group-hover:w-[150px] group-hover:duration-700"></div>
		</div>
		<article class="mx-auto px-6 md:px-8">
			<h1 class="text-3xl font-bold mb-16 uppercase">{{ project[0].title }}</h1>
			{#Carousel*******************************************************************************************#}
			<div
				id="default-carousel" class="relative h-56 lg:w-3/4 lg:h-[31rem]" data-carousel="slide">
				<!-- Carousel wrapper -->
				<div
					class="relative h-full overflow-hidden rounded-lg lg:h-full">
					<!-- Item 1 -->
					{% for projet in project %}
						{% for media in projet.media %}
							<div class="hidden duration-700 ease-in-out" data-carousel-item>
								<img src="{{asset('assets/uploads/projets/' ~ media.picture )}}" class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" alt="{{media.alt}}">
							</div>
						{% endfor %}

					</div>
					<!-- Slider indicators -->
					<div class="absolute z-30 flex space-x-3 -translate-x-1/2 bottom-5 left-1/2">
						{% for i in 1..projet.media|length %}
							<button type="button" class="w-3 h-3 rounded-full" aria-current="true" aria-label="Slide 1" data-carousel-slide-to="{{i}}"></button>
						{% endfor %}
					</div>
				{% endfor %}
				<!-- Slider controls -->
				<button type="button" class="absolute top-0 left-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-prev>
					<span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
						<svg class="w-4 h-4 text-white dark:text-gray-800" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 6 10">
							<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/>
						</svg>
						<span class="sr-only">Previous</span>
					</span>
				</button>
				<button type="button" class="absolute top-0 right-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-next>
					<span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none">
						<svg class="w-4 h-4 text-white dark:text-gray-800" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 6 10">
							<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
						</svg>
						<span class="sr-only">Next</span>
					</span>
				</button>
			</div>
			{#Carousel*******************************************************************************************#}
			<div class="mt-6 text-left">
			<div class="flex items-center">
				<img src="{{asset('assets/img/photos/damien-thumbnail.jpg')}}" class="mr-2 h-8 rounded-full" alt="avatar" loading="lazy"/>
				<time class="text-xs text-gray-500" datetime="{{project[0].date | date('d-m-Y')}}">Publié le:
					{{ project[0].date | date('d-m-Y') }}</time>
			</div>
				
				<p class="mt-6 ">
					{{ project[0].description|raw }}
				</p>
			</div>

		</article>
	</main>
{% endblock %}
